@page
@model PROG_POE.Pages.ModulesModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Student Module List </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Add_Modules" class="btn btn-primary align-content-lg-end">
                <i class="fas fa-plus"></i> &nbsp; Create New Module
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.studentModules.Count > 0)
    {
    <table class="table table-bordered table-striped w-auto" style="width:auto">
        <thead>
            <tr>
                <th>
                    Module Code
                </th>
                <th>
                    Module Name
                </th>
                <th>
                    Credits
                </th>
                <th>
                    Class Hours per week
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    Semester Week
                </th>
                <th>
                    Date Studied
                </th>
                <th>
                    Hours Worked
                </th>
                <th>
                    Self Study Hours Required
                </th>
                <th>
                    Self Study Hours Remain
                </th>
                <th>
                    Weeks
                </th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.studentModules)
        {
            <tr>
                <td width="10%">@obj.Module_Code</td>
                <td width="30%">@obj.Module_Name</td>
                <td width="10%">@obj.Num_Credits</td>
                <td width="30%">@obj.Class_Hours</td>
                <td width="15%">@obj.Start_Date</td>
                <td width="10%">@obj.Semester_Weeks</td>
                <td width="15%">@obj.Date_Studied</td>
                <td width="10%">@obj.Hours_Studied</td>
                <td width="80%">@obj.SelfStudyHrsReq</td>
                <td width="80%">@obj.SelfStudyHrsRem</td>
                <td width="10%">@obj.Weeks</td>

                <td class="text-center w-auto">
                    <div class="w-auto btn-group" role="group">
                        <a asp-page="./EditModule" asp-route-id="@obj.Student_Id" class="btn btn-primary">
                            &nbsp; Edit
                        </a>
                        <a onclick="return confirm
                    ('Are you sure you want to delete this Module?');"
                           asp-page-handler="Delete" asp-route-id="@obj.Student_Id" class="btn btn-danger">
                            &nbsp; Delete
                        </a>
                    </div>
                </td>
            </tr>
                }
        </tbody>
    </table> }
            else
            {
    <p> No Module exits. </p>}

</div>
